<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zk.code.sortdemo.MainActivity">

    <TextView
        android:id="@+id/content_title"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="原数据：" />

    <TextView
        android:id="@+id/content"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/content_title"
        android:layout_toRightOf="@+id/content_title"
        android:padding="10dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/result_title"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_title"
        android:padding="10dp"
        android:text="排序后：" />

    <TextView
        android:id="@+id/result"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:layout_toEndOf="@+id/content_title"
        android:layout_toRightOf="@+id/content_title"
        android:padding="10dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/bt_random"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_title"
        android:padding="10dp"
        android:text="生成随机数" />

    <TextView
        android:id="@+id/bt_sort"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt_random"
        android:layout_alignBottom="@+id/bt_random"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/bt_random"
        android:layout_toRightOf="@+id/bt_random"
        android:gravity="center"
        android:padding="10dp"
        android:text="排序" />

    <TextView
        android:id="@+id/result_detail"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_random"
        android:padding="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/result_detail"
        android:background="@android:color/black" />

    <RadioGroup
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_detail"
        android:orientation="vertical">

